{
  "manifest_version": 3,
  "name": "Today I Learned",
  "version": "1.0",

  "description": "An extension for content publishing on Today I Learned",
  "homepage_url": "https://github.com/Zenika/til-v2-extensions",
  "icons": {
    "48": "icons/til.png"
  },

  "permissions": ["tabs", "storage"],

  "action": {
    "default_icon": "icons/til.png",
    "default_title": "TiL",
    "default_popup": "popup/index.html"
  }
}
